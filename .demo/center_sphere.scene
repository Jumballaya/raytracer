#
#    Basic Sphere Scene, No lighting
#
##
###
####

% start_time 0
% end_time 1
% set_nx 800
% set_ny 400
% set_ns 10
% lights 0

Value : Float(ten) { 10; }

Value : Vec3(sphere_center) { 0; 0; 0.0; }
Value : Vec3(sphere_color) { 0.5; 0.5; 0.5; }
Value : Vec3(lookfrom) { ten; 10; 10.0; }
Value : Vec3(lookat) { 0; 0; 0; }

Value : Texture : Constant(sphere_texture) {
  Color: sphere_color;
}

Value : Material : Lambertian(sphere_material) {
  Albedo: sphere_texture;
}

Object : Sphere(main_sphere) {
  Radius: 0.5;
  Center: sphere_center;
  Material: sphere_material;
}

Camera {
  Lookfrom: lookfrom;
  Lookat: lookat;
  Vfov: 40.0;
  Aperature: 0.0;
  Focus: ten;
}
