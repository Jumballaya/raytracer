% start_time 0
% end_time 1
% set_nx 800
% set_ny 400
% set_ns 30
% lights 0

val ten = Float 10
val center = Vec3 { 0; 0; 0; }
val color = Vec3 { 0.5; 0.5; 0.5; }
val lookAt = Vec3 { 0; 0; 0; }

val texture = Texture:Constant {
  Color: color;
}

val material = Material:Lambertian {
  Albedo: texture;
}

obj s1 = Sphere {
  Radius: 0.5;
  Center: center;
  Material: material;
}

Camera {
  Lookfrom: Vec3 { ten; 10; 10.0; };
  Lookat: lookat;
  Vfov: 40.0;
  Aperature: 0.0;
  Focus: ten;
}
